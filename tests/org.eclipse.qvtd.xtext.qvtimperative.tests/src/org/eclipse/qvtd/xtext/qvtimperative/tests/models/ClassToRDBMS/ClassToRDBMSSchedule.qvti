map booleanToBooleanMR in umlRdbms {
    enforce rdbms () {}
    where (p2s:PackageToSchema, p2n:PrimitiveToName |
        p2n.owner = p2s;
        p2n.name = 'Boolean' + '2' + 'BOOLEAN'; ) { }
