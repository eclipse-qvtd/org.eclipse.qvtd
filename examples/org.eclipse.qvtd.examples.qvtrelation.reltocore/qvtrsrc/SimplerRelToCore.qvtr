   domain relations rvSeq:Sequence(Variable) {rv:Variable {}++rvRest};
   enforce domain core mb:BottomPattern {
      bindsTo = mv:Variable {}
   };
   where {
      RVarToMVar(rv, mv);
      RVarSetToMBVarSet(rvRest, mb);
   }
}

relation RVarSetToDGVarSet
