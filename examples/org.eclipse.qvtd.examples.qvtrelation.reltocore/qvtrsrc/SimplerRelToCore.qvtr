         }
      } {
         (not c.key.part->includes(pp)) and (not e.oclIsKindOf(TemplateExp))
      },
      rd:RelationDomain {
         pattern = rdp:DomainPattern {
            templateExpression = rdt:ObjectTemplateExp {}
         }
