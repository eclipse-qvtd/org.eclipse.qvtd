      domain = cd:CoreDomain {
         name = dn,
         typedModel = mdir:TypedModel {
            name = tmn, 
            usedPackage = up,
            transformation = mt
         },
         guardPattern = cmdg:GuardPattern {
            bindsTo = mv
         }
      }
   };
   when {
      RelationalTransformationToMappingTransformation(rt, mt);
   }
   where {
      RelationDomainToTraceClassVar(r, rd, tcv);
      RVarToMVar(v, mv);
   }
}

